{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "describe": true,
    "beforeEach": true,
    "it": true,
    "expect": true,

    "Map": true,
    "WeakMap": true,
    "Symbol": true,

    "document": true,
    "window": true,
    "Path2D": true
  },
  "rules": {
    "semi": 2
  }
}
